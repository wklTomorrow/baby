/* pages/add-record/add-record.wxss */
.section {
  margin-top: 0;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.section-title .icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.section-title .hint {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
  font-weight: normal;
}

.photos-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-item {
  width: calc((100% - 32rpx) / 3);
  aspect-ratio: 1;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
}

.photo {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 32rpx;
}

.photo-add-btn {
  width: calc((100% - 32rpx) / 3);
  aspect-ratio: 1;
  border: 2rpx dashed #E5E5E5;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999999;
}

.photo-add-btn .icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.photo-add-btn .text {
  font-size: 24rpx;
}

.video-container {
  position: relative;
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}

.video {
  width: 100%;
  height: 400rpx;
}

.video-add-btn {
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #E5E5E5;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999999;
}

.video-add-btn .icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.video-add-btn .text {
  font-size: 28rpx;
}

.text-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background-color: #F8F8F8;
  border-radius: 16rpx;
  font-size: 32rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.text-count {
  text-align: right;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 160rpx; /* 添加底部间距，确保不被保存按钮遮挡 */
}

.save-btn-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background-color: #FFFFFF;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.save-btn {
  width: 100%;
}

