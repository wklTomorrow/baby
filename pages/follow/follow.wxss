.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.search-box {
  display: flex;
  margin-bottom: 30rpx;
  gap: 15rpx;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  background-color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
}

.search-input-wrapper icon {
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

.clear-btn {
  color: #999;
  font-size: 32rpx;
  padding: 0 10rpx;
}

.search-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  font-size: 28rpx;
  border-radius: 40rpx;
  background-color: #FF6B9D;
}

.result-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.baby-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.baby-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s, box-shadow 0.2s;
}

.baby-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.baby-item:last-child {
  margin-bottom: 0;
}

.baby-avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.baby-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #F0F0F0;
}

.baby-info {
  flex: 1;
}

.baby-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.baby-name::before {
  content: 'üë∂';
  margin-right: 12rpx;
  font-size: 32rpx;
}

.baby-details {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 4rpx;
  display: flex;
  align-items: center;
}

.baby-birthday {
  font-size: 26rpx;
  color: #999;
}

.follow-btn {
  padding: 20rpx 40rpx;
  background-color: #FF6B9D;
  color: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
  transition: background-color 0.2s;
}

.follow-btn:active {
  background-color: #FF5588;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

