/* pages/profile/profile.wxss */
.baby-info {
  text-align: center;
  margin-top: 0;
}

.avatar-container {
  position: relative;
  display: inline-block;
  margin-bottom: 24rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #FF6B9D;
}

.edit-avatar-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 56rpx;
  height: 56rpx;
  background-color: #FF6B9D;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #FFFFFF;
}

.edit-avatar-btn .icon {
  font-size: 28rpx;
  color: #FFFFFF;
}

.baby-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.baby-birthday {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666666;
  gap: 8rpx;
}

.baby-birthday .icon {
  font-size: 28rpx;
}

.statistics {
  margin-top: 0;
}

.statistics-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 32rpx;
}

.statistics-title .icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.statistics-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 600;
  color: #FF6B9D;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

.settings-list {
  margin-top: 0;
}

.settings-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.settings-title .icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.setting-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.setting-icon {
  font-size: 32rpx;
}

.setting-text {
  font-size: 30rpx;
  color: #333333;
}

.setting-arrow {
  font-size: 32rpx;
  color: #CCCCCC;
}

/* 关注宝宝列表样式 */
.followed-babies {
  margin-top: 0;
}

.followed-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.followed-title .icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.followed-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.followed-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.followed-avatar-container {
  margin-right: 20rpx;
}

.followed-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #EEEEEE;
}

.followed-info {
  flex: 1;
}

.followed-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.followed-age {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.followed-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
  gap: 6rpx;
}

.followed-time .icon {
  font-size: 20rpx;
}

.followed-arrow {
  font-size: 32rpx;
  color: #CCCCCC;
  margin-left: 20rpx;
}

