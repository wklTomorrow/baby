/**app.wxss**/
page {
  background-color: #F8F8F8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  color: #333333;
  font-size: 32rpx;
  line-height: 1.6;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 主按钮 */
.btn-primary {
  background-color: #FF6B9D;
  color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 157, 0.3);
  border: none;
  line-height: 1.5;
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

button.btn-primary {
  background-color: #FF6B9D;
  color: #FFFFFF;
}

/* 次要按钮 */
.btn-secondary {
  background-color: #FFFFFF;
  color: #FF6B9D;
  border: 2rpx solid #FF6B9D;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  text-align: center;
}

.btn-secondary:active {
  background-color: #FFF0F5;
}

/* 文字按钮 */
.btn-text {
  color: #FF6B9D;
  font-size: 32rpx;
  padding: 16rpx;
}

/* 输入框 */
.input {
  background-color: #FFFFFF;
  border: 2rpx solid #E5E5E5;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.input:focus {
  border-color: #FF6B9D;
}

/* 标签 */
.tag {
  display: inline-block;
  background-color: #F0F0F0;
  color: #666666;
  border-radius: 24rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.tag.active {
  background-color: #FF6B9D;
  color: #FFFFFF;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: #E5E5E5;
  margin: 32rpx 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  color: #999999;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-state-text {
  font-size: 28rpx;
  margin-bottom: 48rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 安全区域 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

